[Unit]
Description=Syncthing - Open Source Continuous File Synchronization for <%= @daemon_uid %>
Documentation=man:syncthing(1)
After=network.target
Wants=syncthing-inotify@.service

[Service]
User=<%= @daemon_uid %>
ExecStart=<%= @daemon %> -no-browser -no-restart -logflags=0 -home="<%= @home_path %>"
Restart=always
SuccessExitStatus=3 4
RestartForceExitStatus=3 4

[Install]
WantedBy=multi-user.target
